/*
* PURCHASE
*/

//grey
spriteset(spriteset_dmu_Mat34_grey_purchase, "gfx/purchase/dmu/Mat34_white.png") {
	template_purchase(0, 0)
}
//green
spriteset(spriteset_dmu_Mat34_green_purchase, "gfx/purchase/dmu/Mat34_green.png") {
	template_purchase(0, 0)
}
//blue
spriteset(spriteset_dmu_Mat34_blue_purchase, "gfx/purchase/dmu/Mat34_blue.png") {
	template_purchase(0, 0)
}

switch(FEAT_TRAINS, SELF, switch_dmu_Mat34_livery_purchase, current_year) {
	0..1937: spriteset_dmu_Mat34_grey_purchase;
    1938..1953: spriteset_dmu_Mat34_green_purchase;
    spriteset_dmu_Mat34_blue_purchase;
}

/*
* VEHICLE
*/

//grey
spriteset(spriteset_dmu_Mat34_grey_front, "gfx/dmu/Mat34.png") {
	template_2cc_88(0, 0)
}
