	template_2cc_78(0, 30)
}
spriteset(spriteset_dmu_Mat34_grey_back, "gfx/dmu/Mat34.png") {
	template_2cc_88(0, 60)
}

switch(FEAT_TRAINS, SELF, switch_dmu_Mat34_position_grey, (position_in_vehid_chain % 3)) {
