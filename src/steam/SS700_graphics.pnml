/*
* ARTICULATED VEHICLE CALLBACK
*/

switch(FEAT_TRAINS, SELF, switch_steam_SS700_articulated, extra_callback_info1) {
    1: return item_steam_SS700;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

/*
* VEHICLE LENGTH CALLBACK
*/


switch(FEAT_TRAINS, SELF, switch_steam_SS700_length, (position_in_vehid_chain % 2)) {
    1: return SHORTEN_TO_4_8;
    return SHORTEN_TO_6_8;
}
