/*
* PURCHASE
*/

spriteset(spriteset_steam_SS700_purchase, "gfx/steam/SS700.png") {
	template_purchase(1, 224)
}

spriteset(spriteset_steam_NS3700_purchase, "gfx/steam/NS3700.png") {
	template_purchase(1, 224)
}

switch(FEAT_TRAINS, SELF, switch_steam_SS700_livery_purchase, current_year) {
	0..1970: spriteset_steam_SS700_purchase;
    spriteset_steam_NS3700_purchase;
}

/*
* VEHICLE
*/

//6x engine animation
spriteset(spriteset_steam_SS700_ani_1, "gfx/steam/SS700.png") {
	template_2cc_68(1, 1)
}
spriteset(spriteset_steam_SS700_ani_2, "gfx/steam/SS700.png") {
	template_2cc_68(1, 32)
}
spriteset(spriteset_steam_SS700_ani_3, "gfx/steam/SS700.png") {
	template_2cc_68(1, 64)
}
spriteset(spriteset_steam_SS700_ani_4, "gfx/steam/SS700.png") {
	template_2cc_68(1, 96)
}
spriteset(spriteset_steam_SS700_ani_5, "gfx/steam/SS700.png") {
	template_2cc_68(1, 128)
}
spriteset(spriteset_steam_SS700_ani_6, "gfx/steam/SS700.png") {
	template_2cc_68(1, 160)
}
//tender
spriteset(spriteset_steam_SS700_tender, "gfx/steam/SS700.png") {
	template_2cc_48(1, 192)
}

switch(FEAT_TRAINS, SELF, switch_steam_SS700_animation, (motion_counter)) {
    3..4:   spriteset_steam_SS700_ani_2;
    5..7:   spriteset_steam_SS700_ani_3;
    8..10:  spriteset_steam_SS700_ani_4;
    11..12: spriteset_steam_SS700_ani_5;
    13..15: spriteset_steam_SS700_ani_6;
    spriteset_steam_SS700_ani_1;
}

switch(FEAT_TRAINS, SELF, switch_steam_SS700_position, (position_in_vehid_chain % 2)) {
	1: spriteset_steam_SS700_tender;
    switch_steam_SS700_animation;
}

